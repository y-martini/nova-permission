{
    "name": "y-martini/nova-permission",
    "license": "MIT",
    "require": {
        "php": "^7.3|^8.0",
        "laravel/nova": "~4.0",
        "spatie/laravel-permission": "^5.8|^6.0"
    },
    "autoload": {
        "psr-4": {
            "YMartini\\Nova\\Permission\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YMartini\\Nova\\Permission\\ServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ]
}
